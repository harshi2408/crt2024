import java.util.Scanner;
public class Pattern{
          public static void main(String[] rgs){
                   Scanner sc=new Scanner(System.in);
                      int n=sc.nextInt();
                         for(int i=1;i<=n;i++){
 for(int k=n-1;k>=i;k--){
System.out.print(" ");
}
for(int j=1;j<=i;j++)
{
System.out.print("* ");
}
System.out.println();
}
}
}
output:
C:\javaaa>java Pattern
5
    *
   * *
  * * *
 * * * *
* * * * *
